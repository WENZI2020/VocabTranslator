/* miniprogram/pages/me/record.wxss */
.me {
  font-size: 24px;
  width: 100%;
  height: 100%;
  position: relative;
}

.me>view:first-child {
  width: 100%;
  padding-top: 10pt;
  padding-bottom: 10pt;
  display: flex;
  flex-flow: row nowrap;
  border-bottom: 1pt solid #bbb;
  background: #fff;
}

.me>view:first-child text {
  flex: 1;
  text-align: center;
  align-self: center;
}

.me>swiper {
  text-align: center;
  font-size: 11pt;
  color: #f00;
}

.me>button {
  position: fixed;
  bottom: 0%;
  left: 0%;
  width: 100%;
}